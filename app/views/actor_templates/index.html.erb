
<div class="col-md-6">
  <h1>
    All Actors
  </h1>

  <a href="/actors/new">
    Add a new actor
  </a>

    <div class="thumbnail">
<% @all_actors.each do|actor| %>
        <a href="/actors/<%= actor.id %>">
            <%= actor.name %>
            </a>
        </div>
        <p><%= actor.bio %></p>
        <p><%= actor.dob %></p>
        <img src="<%= actor.image_url %>"></img>

        
        <div class="caption">
          <a href = "/actors/<%= actor.id %>" class="btn btn-default btn-block">
            Show Details
          </a>

          <a href = "/actors/<%= actor.id %>/edit" class="btn btn-default btn-block">
            Edit
          </a>
    
          <a href = "/delete_actor/<%= actor.id %>" class="btn btn-default btn-block">
            Delete
          </a>
        </div>
    </div>  
<% end %>
</div>

